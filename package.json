{
  "name": "lotaya-ai-server",
  "version": "1.0.0",
  "description": "Backend and frontend server for Lotaya AI.",
  "main": "server.js",
  "scripts": {
    "build": "esbuild index.tsx --bundle --outfile=dist/index.js --jsx=automatic --loader:.ts=tsx --define:process.env.NODE_ENV='\"production\"'",
    "start": "node server.js",
    "dev": "npm run build && node server.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "@google/genai": "^1.14.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "esbuild": "^0.21.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
